        <title>{% block title '' %} | Photo Gallery for Google Drive</title>

        <link rel="stylesheet" href="/css/lib/bootstrap.readable/bootstrap.min.css">
        <link href="{{ app.request.basepath }}/css/main.css" rel="stylesheet" type="text/css" />

        {% block css '' %}

